generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Product {
  id        String   @id @default(uuid())
  title     String
  number    String
  amount    Int
  price     Int
  date      DateTime @default(now())
  image     String
  createdAt DateTime @default(now())
  carts     Cart[]
}

model Order {
  id        String   @id @default(uuid())
  vendorId  String
  name      String
  date      DateTime
  number    String
  price     Int
  address   String
  taxId     String
  phone     String
  note      String?
  status    String
  createdAt DateTime @default(now())
  carts     Cart[]
  vendor    Vendor   @relation(fields: [vendorId], references: [id])
}

model Cart {
  id        String   @id @default(uuid())
  productId String?
  orderId   String
  amount    Int
  createdAt DateTime @default(now())
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  products  Product? @relation(fields: [productId], references: [id])
}

model QuotationSetting {
  id      String @id
  initial String
}

model Vendor {
  id        String   @id @default(uuid())
  name      String
  address   String
  taxId     String
  phone     String
  createdAt DateTime @default(now())
  order     Order[]
}

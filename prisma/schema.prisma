generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @default(uuid())
  title     String
  number    String
  amount    Int
  price     Int
  date      DateTime @default(now())
  image     String
  createdAt DateTime @default(now())
  carts     Cart[]
}

model Order {
  id        String   @id @default(uuid())
  name      String
  date      DateTime
  number    String
  price     Int
  address   String
  taxId     String
  phone     String
  note      String?
  status    String
  createdAt DateTime @default(now())
  carts     Cart[]
}

model Cart {
  id        String   @id @default(uuid())
  productId String?
  orderId   String
  amount    Int
  createdAt DateTime @default(now())
  products  Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model QuotationSetting {
  id      String @id
  initial String
}

model Vendor {
  id        String   @id @default(uuid())
  name      String
  address   String
  taxId     String
  phone     String
  createdAt DateTime @default(now())
}
